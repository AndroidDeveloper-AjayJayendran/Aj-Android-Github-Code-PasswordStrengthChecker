<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ajay.com.mypsdstrength.MainActivity"
    tools:showIn="@layout/activity_main">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="The Password Checker"
                android:textColor="#FFD700"
                android:id="@+id/t"
                android:textSize="17sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/t1"
                android:layout_below="@+id/t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="29dp"
                android:text="Enter your Password"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff" />
            <EditText
                android:id="@+id/e1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t1"
                android:layout_marginTop="9dp"
                android:textColor="#fff"
                android:background="@drawable/input_outline"
                android:padding="8dp"/>
            <TextView
                android:textSize="15dp"
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/e1"
                android:text="Show/Hide"
                android:textStyle="bold"
                android:textColor="#fff"/>
            <CheckBox
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="11dp"
                android:checked="true"
                android:layout_marginTop="9dp"
                android:background="@drawable/input_outline"
                android:layout_below="@+id/t2"/>
            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/c1"
                android:text="Score"
                android:textStyle="bold"
                android:textColor="#fff" />
            <ProgressBar
                android:id="@+id/pb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:progressBackgroundTint="#fff"
                android:background="@drawable/input_outline"
                android:padding="8dp"
                android:max="100"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_below="@+id/t3"/>
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/pb"
                android:textSize="15dp"
                android:text="Complexity"
                android:textStyle="bold"
                android:textColor="#fff" />
            <TextView
                android:id="@+id/e2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/t4"
                android:padding="8dp"
                android:textStyle="bold"
                android:background="@drawable/input_outline"
                android:textColor="#fff" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/b"
                android:layout_below="@+id/e2"
                android:background="#6AB344"
                android:layout_marginTop="14dp"
                android:text="Check"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u00A9 2016 | Developed by Ajay Jayendran"
                android:layout_below="@+id/b"
                android:padding="8dp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#FFD700"
                />
    </RelativeLayout>
</ScrollView>
